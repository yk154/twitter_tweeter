{
  "name": "ix-twatter",
  "scripts": {
    "start": "dotenv -- nodemon -e ts,graphql -x ts-node src/index.ts",
    "dev": "npm-run-all --parallel start playground",
    "debug": "dotenv -- nodemon -e ts,graphql -x ts-node --inspect src/index.ts",
    "playground": "graphql playground",
    "build": "rimraf dist && graphql codegen && tsc"
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.9.2",
    "graphql-tools": "^3.0.5",
    "graphql-yoga": "1.14.12",
    "jsonwebtoken": "8.3.0",
    "prisma-binding": "^2.1.0"
  },
  "prettier": {
    "semi": false
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.1",
    "dotenv-cli": "1.4.0",
    "graphql-cli": "2.16.4",
    "nodemon": "1.17.5",
    "npm-run-all": "4.1.3",
    "prisma": "1.11.0",
    "rimraf": "2.6.2",
    "ts-node": "6.2.0",
    "typescript": "2.9.2"
  }
}
